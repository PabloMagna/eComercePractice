@model IEnumerable<Actor>

@{
    ViewData["Title"] = "List of Actors";
}
<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table">
            <thead>
                <tr class="text-center">
                    <th>@Html.DisplayNameFor(m => m.ProfilePicture)</th>
                    <th>@Html.DisplayNameFor(m => m.FullName)</th>
                    <th>@Html.DisplayNameFor(m => m.Bio)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            <img class="rounded-circle" src="@item.ProfilePicture" alt="@item.FullName" style="max-width:150px" />
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(m => item.FullName)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(m => item.Bio)
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary" asp-action="Edit" asp-controller="Actors" asp-route-id="@item.Id"><i class="bi bi-pencil-square">Edit</i></a>|
                            <a class="btn btn-outline-info" asp-action="Details" asp-controller="Actors" asp-route-id="@item.Id"><i class="bi bi-eye">Details</i></a>|
                            <a class="btn btn-outline-danger" asp-action="Delete" asp-controller="Actors" asp-route-id="@item.Id"><i class="bi bi-trash">Delete</i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<div style="position:fixed;right:25px;bottom:25px" class="text-white mb-3">
    <a asp-action="Create" class="btn btn-outline-success"><i class="bi bi-plus-circle"></i>Add New Actor</a>
</div>