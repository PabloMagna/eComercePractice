@model Actor

@{
    ViewData["Title"] = "Actor Details";
}
<div class="row text">
    <div class="col-8 offset-2">
        <p>
            ADD New Actor
        </p>

    </div>
    <div class="row">
        <div class="col-8 offset-2">
            <div class="form-group text-center">
                <img id="profilePicturePreview" class="border-info rounded-circle" style="max-width:150px" />
            </div>
            <div class="form-group">
                <label asp-for="ProfilePicture" class="form-label"></label>
                <input asp-for="ProfilePicture" class="form-control" readonly/>
                <span asp-validation-for="ProfilePicture" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FullName" class="form-label"></label>
                <input asp-for="FullName" class="form-control"readonly />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Bio" class="form-label"></label>
                <input asp-for="Bio" class="form-control" readonly />
                <span asp-validation-for="Bio" class="text-danger"></span>
            </div>
            <div class="form-group d-flex justify-content-between">
                <a class="btn btn-secondary" asp-action="Index">Back to List</a>
                <a class="btn btn-success float-right" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script>
        $(document).ready(function () {
            var output = $("#profilePicturePreview")[0];
            output.src = $("#ProfilePicture").val();
        });
        $("#ProfilePicture").on("change", function () {
            var output = $("#profilePicturePreview")[0];
            output.src = $(this).val();
        });
    </script>
}
